{
	"extends": "@ljharb/tsconfig",
	"compilerOptions": {
		"target": "ES2021",
		"lib": ["ES2021"],
		"outDir": "./",
		"noEmitOnError": true,
		"noImplicitAny": true,
		"noImplicitReturns": true,
		"noImplicitThis": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true
	},
	"include": [
		"./**/*.ts",
		"./**/*.js"
	],
	"exclude": [
		"coverage",
		"node_modules",
		"dist",
		"**/*.test.ts",
		"**/*.spec.ts"
	]
}
